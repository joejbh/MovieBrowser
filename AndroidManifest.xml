<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joejbh.moviebrowser"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.joejbh.moviebrowser.HomeActivity"
            android:label="@string/app_name"
            android:logo="@drawable/terse_banner" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.joejbh.moviebrowser.BrowseMoviesActivity"
            android:label="@string/title_activity_my_movies"
            android:logo="@drawable/terse_banner" >
        </activity>
        <activity
            android:name="com.joejbh.moviebrowser.MyReviewsActivity"
            android:label="@string/title_activity_my_reviews"
            android:logo="@drawable/terse_banner" >
        </activity>
        <activity
            android:name="com.joejbh.moviebrowser.BrowseActionActivity"
            android:label="@string/title_activity_browse_action"
            android:logo="@drawable/terse_banner" >
        </activity>
        <activity
            android:name="com.joejbh.moviebrowser.BrowseDramaActivity"
            android:label="@string/title_activity_browse_drama"
            android:logo="@drawable/terse_banner" >
        </activity>
        <activity
            android:name="com.joejbh.moviebrowser.BrowseComedyActivity"
            android:label="@string/title_activity_browse_comedy"
            android:logo="@drawable/terse_banner" >
        </activity>
        <activity
            android:name="com.joejbh.moviebrowser.BrowseByActorActivity"
            android:label="@string/title_activity_browse_by_actor"
            android:logo="@drawable/terse_banner" >
        </activity>
        <activity
            android:name="com.joejbh.moviebrowser.ViewMovieDetailsActivity"
            android:label="@string/title_activity_view_movie_details" >
        </activity>
    </application>

</manifest>