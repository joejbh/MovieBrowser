<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81c4d2"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingLeft="110dip" >

        <ImageView
            android:id="@+id/imageViewMenuArrow"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:contentDescription="Menu Arrow"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:src="@drawable/menu_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageViewHomeBanner"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:contentDescription="Terse Film Logo"
            android:src="@drawable/terse_banner" />
    </LinearLayout>

</LinearLayout>